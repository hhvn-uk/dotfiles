#!/bin/rc

cd `{dirname $0}

mkdir -p /tmp/blocks
cd /tmp/blocks

fn block {
	val = `$nl{dwmbar/$1} {
		if (~ $val () || ~ $val '') {
			rm /tmp/blocks/$1
		} else {
			printf '%s' $val > /tmp/blocks/$1
		}
	} &
}

fn sigexit {
	for (p in $apids) {
		kill $p
	}
}

block vol
# block mus
while (true) {
	block bat
	block cpu
	block mem
	sleep 3
} &

while (true) {
	# block mus
	block time2
	sleep 1
} &

while (true) {
	block time
	block net
	sleep 900
} &

while (true) {
	sleep 0.1
	xsetroot -name ``(''){cat mus bat torrent cpu mem vol time time2 >[2]/dev/null | 
				tr -d '\n' | 
				sed 's/^\[/^f4^/;s~\[~^c#000000^^r0,0,1,50^^d^^f4^~g;s~\]~^f4^~g'}
}
