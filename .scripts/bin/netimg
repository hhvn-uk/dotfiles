#!/bin/sh

while [ $# != 0 ]
do

	file="/tmp/netimg.$(head -n 5 /dev/urandom | base64 | tr '/' '+' | tr -d '\n' | cut -c-10)"
	while [ -f $file ]
	do
		file="/tmp/netimg.$(head -n 5 /dev/urandom | base64 | tr '/' '+' | tr -d '\n' | cut -c-10)"
	done

	curl -kL "$1" > "$file"
	files="$files $file"
	shift
done

sxiv $files
rm $files
