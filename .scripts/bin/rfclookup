# usage: rfclookup.sh -s <search query>
#	 rfclookup.sh -n <number>

[ "$1" = "-s" ] && {
	curl https://www.ietf.org/download/rfc-index.txt | tr '\n' '\t' | sed 's/\t\t/\n/g' | tr '\t' ' ' | tr -s ' ' | grep '^[0-9][0-9][0-9][0-9] ' | grep -iE "$2"
} || {
	curl https://ietf.org/rfc/rfc$2.txt
}
