index=https://www.ietf.org/download/rfc-index.txt 
document="https://www.ietf.org/rfc/rfc%s.txt"

usage(){
	base=$(basename "$0")
	printf "usage: %s -s <search query>\n" "$base"
	printf "\t %s -n <number>\n" "$base"
	printf "\t %s -u <number>\n" "$base"
}

case "$1" in
-s)
	curl -i $index |
		tr '\n' '\t' | 
		sed 's/\t\t/\n/g' | 
		tr '\t' ' ' | 
		tr -s ' ' | 
		grep '^[0-9][0-9][0-9][0-9] ' | 
		grep -iE "$2"
	;;
-n)
	curl -s $(printf "$document\n" "$2") | less
	;;
-u)
	printf "$document\n" "$2"
	;;
esac
