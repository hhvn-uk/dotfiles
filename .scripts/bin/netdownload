#!/bin/sh

input=$(printf "no\nyes\n" | dmenu -i -p "Download: $1")
[ "$input" = "yes" ] && {
	file="$HOME/general/downloads/$(echo "$1" | tr '/' '+')"
	while [ -f $file ]
	do
		file="$HOME/general/downloads/$(base64 </dev/urandom | tr '/' '+' | head -c10)"
	done
	curl "$(echo "$1" | sed -E 's/]|\[|}|\{/\\&/g')" > "$file"
	herbe "Saved to: $file"
	exit 1
} || {
	urlhand2 "$1"
}
