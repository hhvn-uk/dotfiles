#!/bin/sh


[ "$1" = "video" ] && {
	shift
	hmpv pause /tmp/mpv-socket
	herbe "Playing video(s): $@" &
	mpv --input-ipc-server=/tmp/mpv-socket2 -- $@ || herbe "Failed to play video(s): $@"
	exit
} || {
	herbe "Playing music: $@" &
	mpv --input-ipc-server=/tmp/mpv-socket --no-video -- $@ || herbe "Failed to play music: $@"
	exit
}
