# usage: finger [user]@<host>

user=${1%%@*}
host=${1#*@}

[ -z $user ] && {
	printf "\r\n" | nc $host 79 | tr -d '\r'
} || {
	printf "$user\r\n" | nc $host 79 | tr -d '\r'
}
