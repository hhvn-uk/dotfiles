#!/bin/sh

a="$1"
shift

case "$a" in
	export-key) gpg --export --armour $1 ;;
	export-keyring) gpg --export --armour ;;
	list*) 
		[ ! -z $1 ] && args="--keyid-format $1"
		gpg --list-keys $args && gpg --list-secret-keys $args
		;;
	encrypt) gpg --encrypt --sign --armour --passphrase "$(dpass gpg2key)" -r "$1" ;;
esac
