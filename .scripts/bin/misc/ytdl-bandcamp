#!/bin/sh

for u in $@
do
	echo "$u" | grep '/album/' && {
		dir=$(basename $u)
		youtube-dl -xic --add-metadata -o "$dir/%(title)s.%(ext)s" -- "$u"
		for f in $(find "$dir" -maxdepth 1 -type f)
		do
			mv "$f" $(echo "$f" | tr " " ".")
		done
	} || {
		mkdir -p singles/
		youtube-dl -xic --add-metadata -o 'singles/%(title)s.%(ext)s' -- "$u"
	}
done
