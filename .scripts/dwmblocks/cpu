#!/bin/sh

cpu=$(ps -e -o %cpu | awk '{s+=$1} END {print s}' | sed 's/\..*$//g')
tempt=$(acpi -t | awk '{s+=$4} END {print s}')
tempc=$(acpi -t | wc -l)
temp=$(($tempt/$tempc))
temp=" $temp"
[ $temp -gt 55 ] && [ ! $temp -gt 70 ] && temp="^c#aa7700^$temp"
[ $temp -gt 60 ] && temp="^c#aa0000^$temp"
[ $temp -lt 55 ] && temp="^c#aaaa00^$temp"
[ $temp -lt 50 ] && temp="^c#00aa00^$temp"
echo "[^c#7777cc^C^d^$cpu%${temp}C]"
