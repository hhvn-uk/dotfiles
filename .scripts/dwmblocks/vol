toggled=$(amixer sget Master | awk '/Mono/ {print $6}' | tr -d '[]')
volume=$(amixer sget Master | awk '/Mono/ {print $4}' | tr -d '[]')
output=$(echo $(echo ${volume}|tr "\n" " ")$(echo ${toggled} | tr "\n" " " | sed 's/ //g'))
echo "[VOL $output]"
