# vim: filetype=neomuttrc

set sidebar_visible
set sidebar_width=25
set sidebar_format = "%2N/%-5S  %B "
set mail_check_stats
set sort_browser="unsorted"
set sidebar_short_path=yes

bind index,pager \CK sidebar-prev
bind index,pager \CL sidebar-open
bind index,pager \CJ sidebar-next

color sidebar_divider color2 default
color sidebar_highlight color7 default
color sidebar_new color14 default
color sidebar_unread color14 default
color sidebar_ordinary yellow default
mono sidebar_indicator reverse

set sidebar_divider_char = '  '

bind index,pager B sidebar-toggle-visible
