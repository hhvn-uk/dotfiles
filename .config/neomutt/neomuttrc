source users/hayden@haydenvh.com	#user
#source users/backtrack@airmail.cc	#user
#source users/irc@hlirc.net	#user

set ssl_starttls = yes
set ssl_force_tls = yes
set mailcap_path = "~/.config/neomutt/mailcap"
set smtp_authenticators = "plain"

set folder = "~/general/mail/"
set spoolfile = "+haydenvhcom"
set record = "+sent"
set postponed = "+drafts"
set trash = "+rubbish"
mailboxes =haydenvhcom =postmaster =hlircnet =lists =money =dataswamporg =inbox-airmail ="========================" =forwards =sent =drafts =rubbish =backup =spam ="------------------------" =exmouth =exmouthsent =exmouthrubbish

set mbox_type = Maildir
set abort_key = "<Esc>"
set abort_nosubject = no
set abort_unmodified = no
set alias_file = "~/.config/neomutt/alias"

source colours
source sidebar
source alias
source gpg

bind index D purge-message
bind index,pager M compose-to-sender
#bind index R source
bind index \Ct collapse-thread
bind index \Ca collapse-all

set new_mail_command="sh -c 'echo N:%n U:%u > /tmp/mail &'"
set sort=threads
set collapse_all

set signature=~/.config/neomutt/signatures

# source ~/.config/neomutt/gpg.rc

# mark all mail as read
macro index A \
    "<clear-flag>O" \
    "mark mail as read"

my_hdr X-Mailer: neomutt
hdr_order Subject From To Date

