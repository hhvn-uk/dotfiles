[user]
	name = hhvn
	email = dev@hhvn.uk
	signingKey = ED59FC1A

[commit]
	gpgSign = yes

[gpg]
	program = passgpg

[blame]
	date = human

[core]
	pager = gdiffpager

[alias]
	hs = !sh ~/.config/git/hist
	fm = !sh ~/.config/git/format-patch
	re = !sh ~/.config/git/remote
	pu = !sh ~/.config/git/push
	pa = !sh ~/.config/git/push --all
	ef = !sh ~/.config/git/effort
	fi = !sh ~/.config/git/find
	du = !sh ~/.config/git/disk-usage
	sc = !sh ~/.config/git/sloccount
	br = branch
	se = send-email
	ad = add
	rs = reset
	rh = reset --hard
	mg = merge --no-ff
	ch = checkout
	co = commit
	cp = cherry-pick
	pl = pull
	df = diff

[init]
	defaultBranch = master

[format]
	headers = "Organization: hhvn.uk"

[sendemail]
	smtpDomain = port.hhvn.uk
	smtpServer = hhvn.uk
	smtpEncryption = tls
