# This is Git's per-user configuration file.
[user]
	name = hhvn
	email = dev@hhvn.uk

[blame]
	date = human

[alias]
	hs = !sh ~/.config/git/hist
	fm = !sh ~/.config/git/format-patch
	ac = !sh ~/.config/git/add-commit
	re = !sh ~/.config/git/remote
	pu = !sh ~/.config/git/push
	pa = !sh ~/.config/git/push --all
	se = send-email
	ad = add
	rs = reset
	rh = reset --hard
	mg = merge --no-ff
	ch = checkout
	co = commit
	cp = cherry-pick

[init]
	defaultBranch = master

[format]
	headers = "Organization: hhvn.uk"

[sendemail]
	smtpDomain = port.hhvn.uk
	smtpServer = hhvn.uk
	smtpEncryption = tls
	smtpServerPort = 587
	cc = ""

[pull]
	rebase = false
