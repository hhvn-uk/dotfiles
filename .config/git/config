# This is Git's per-user configuration file.
[user]
	name = hhvn
	email = dev@haydenvh.com

[blame]
	date = human

[alias]
	hist = !sh ~/.config/git/hist
	mrg = merge --no-ff
	fm = !sh ~/.config/git/format-patch
	ch = checkout
	co = commit
	pu = push
	ac = !sh ~/.config/git/add-commit

[init]
	defaultBranch = master

[format]
	headers = "Organization: haydenvh.com"

[sendemail]
	smtpDomain = port.hhvn.uk
	smtpServer = hhvn.uk
	smtpEncryption = tls
	smtpServerPort = 587
	cc = ""

[pull]
	rebase = false
